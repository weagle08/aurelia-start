{
  "extends": "tslint:recommended",
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": true,
    "object-literal-sort-keys": false,
    "semicolon": true,
    "eofline": false,
    "no-var-requires": false,
    "interface-name": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "no-empty": false,
    "no-empty-interface": false,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^\\s*\\*"
      }
    ]
  },
  "autoFixOnSave": true
}