{
    "extends": "tslint:recommended",
    "rules": {
      "quotemark": [
        true,
        "single"
      ],
      "trailing-comma": true,
      "object-literal-sort-keys": false,
      "semicolon": true,
      "eofline": false,
      "no-var-requires": false,
      "interface-name": false,
      "variable-name": [
        true,
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ],
      "no-empty": false,
      "no-empty-interface": false,
      "max-line-length": [
        true,
        {
          "limit": 200,
          "ignore-pattern": "^\\s*\\*"
        }
      ],
      "object-literal-shorthand": false,
      "prefer-const": false,
      "prefer-for-of": false,
      "member-ordering": [
        true,
        {"order": [
          "public-static-field",
          "private-instance-field",
          "public-instance-field",
          "public-constructor",
          "public-instance-method",
          "private-instance-method"
        ]}
      ]
    },
    "autoFixOnSave": true
  }